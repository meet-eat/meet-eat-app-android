<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivRateGuestProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:elevation="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/profilestd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvRateGuestUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:elevation="5dp"
                android:text="@string/username"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivRateGuestProfile"
                app:layout_constraintStart_toEndOf="@+id/ivRateGuestProfile"
                app:layout_constraintTop_toTopOf="@+id/ivRateGuestProfile" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/ibtRateGuestRate1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:elevation="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/star"
                android:tint="@color/rating" />

            <ImageButton
                android:id="@+id/ibtRateGuestRate2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:elevation="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/star"
                android:tint="@color/textHint" />

            <ImageButton
                android:id="@+id/ibtRateGuestRate3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:elevation="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/star"
                android:tint="@color/textHint" />

            <ImageButton
                android:id="@+id/ibtRateGuestRate4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:elevation="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/star"
                android:tint="@color/textHint" />

            <ImageButton
                android:id="@+id/ibtRateGuestRate5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:elevation="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/star"
                android:tint="@color/textHint" />
        </LinearLayout>
    </LinearLayout>
</layout>