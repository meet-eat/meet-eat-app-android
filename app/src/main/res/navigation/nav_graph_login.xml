<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph_login"
    app:startDestination="@id/loginFragment">
    <!-- LoginFragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="meet_eat.app.fragment.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@animator/slide_in_left"
            app:exitAnim="@animator/slide_out_right"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />
    </fragment>
    <!-- RegisterFragment -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="meet_eat.app.fragment.login.RegisterFragment"
        android:label="RegisterFragment" />
</navigation>