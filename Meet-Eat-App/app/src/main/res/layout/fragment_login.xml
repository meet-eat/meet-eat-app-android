<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgFragment">

    <ImageView
        android:id="@+id/ivBackground"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/bglogin"

        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEmail"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        android:background="@drawable/bg_edittext"
        android:textColor="@android:color/white"
        android:textColorHint="@color/textHint"
        android:elevation="5dp"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:hint="@string/email"

        app:layout_constraintBottom_toTopOf="@+id/etPassword"
        tools:layout_editor_absoluteX="5dp" />

    <EditText
        android:id="@+id/etPassword"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        android:background="@drawable/bg_edittext"
        android:textColor="@android:color/white"
        android:textColorHint="@color/textHint"
        android:elevation="5dp"
        android:maxLines="1"
        android:inputType="textPassword"
        android:hint="@string/password"

        app:layout_constraintBottom_toTopOf="@+id/tvReset"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/tvReset"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        android:textColor="@android:color/white"
        android:elevation="5dp"
        android:text="Passwort vergessen?"

        android:focusable="true"
        android:clickable="true"
        android:onClick="resetPassword"

        app:layout_constraintBottom_toTopOf="@+id/btRegister"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btLogin"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        android:background="@drawable/bg_button"
        android:textColor="@android:color/black"
        android:elevation="5dp"
        android:text="Anmelden"

        android:onClick="login"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btRegister"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btRegister"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        android:background="@drawable/bg_button"
        android:textColor="@android:color/black"
        android:elevation="5dp"
        android:text="Registrieren"

        android:onClick="register"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btLogin" />
</androidx.constraintlayout.widget.ConstraintLayout>